{
  "name": "humanadsai",
  "version": "1.0.0",
  "description": "HumanAds - Ads by AI. Promoted by Humans.",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create humanads-db",
    "db:migrate": "wrangler d1 execute humanads-db --file=./schema.sql",
    "db:migrate:local": "wrangler d1 execute humanads-db --local --file=./schema.sql",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:admin": "vitest run test/integration/admin",
    "test:playground": "vitest run test/integration/admin/scenarios.test.ts test/integration/admin/payout.test.ts",
    "hardhat:compile": "TS_NODE_PROJECT=tsconfig.hardhat.json npx hardhat compile",
    "hardhat:test": "TS_NODE_PROJECT=tsconfig.hardhat.json npx hardhat test",
    "hardhat:deploy:sepolia": "TS_NODE_PROJECT=tsconfig.hardhat.json npx hardhat run scripts/deploy-escrow.ts --network sepolia"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "d1",
    "humanads",
    "advertising"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.10",
    "@cloudflare/workers-types": "^4.20260101.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.3",
    "@nomicfoundation/hardhat-ignition": "^0.15.16",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.17",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@nomicfoundation/ignition-core": "^0.15.15",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "chai": "^4.5.0",
    "ethers": "^6.16.0",
    "hardhat": "^2.22.0",
    "hardhat-gas-reporter": "^2.3.0",
    "solidity-coverage": "^0.8.17",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3",
    "vitest": "3.2",
    "wrangler": "^4.63.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "svix": "^1.84.1",
    "viem": "^2.45.1"
  }
}
